<body>
    <h2>Login</h2>
    <div class="row col-md-6 col-sm-8 col-xl-4 col-lg-5 formulario">
        <div class="danger">
            @ViewBag.Error
        </div>
        <form action="@Url.Content("~/Acceso/Login")" method="post">
            <div class="form-group form-group text-center pt-3">
                <label class="text-light">Usuario</label>
                <div>
                    <input type="email" name="User" class="form-control" placeholder="Ingrese su Usuario" />
                </div>
            </div>



            <div class="form-group form-group text-center pt-3">
                <label class="text-light">Contraseña</label>
                <div>
                    <input type="password" name="Pass" class="form-control" placeholder="Ingrese su Usuario" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-success" />
            </div>
        </form>
    </div>










